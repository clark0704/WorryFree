<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="203dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#00000000">
            <TextView
                android:id="@+id/assert_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dip"
                android:maxLines="1"
                android:text="ddddddd"/>
            <TextView
                android:id="@+id/assert_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:layout_below="@+id/assert_title"
                android:layout_marginLeft="10dip"
                android:maxLines="1"
                android:text="ddddddd" />


            <RelativeLayout
                android:id="@+id/viewGroup"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:background="@android:color/black"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgv_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:src="@mipmap/discovery_pages_line"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/assert_page"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/assert_total_page"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="6"
                    android:maxLines="1" />

            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
